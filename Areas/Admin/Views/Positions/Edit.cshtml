@model IEnumerable<ElectionManagementSystem.ElectionPosition>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutView.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 class="widget-title lighter">Edit Position</h4>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <div id="fuelux-wizard-container">

                        <div class="step-content pos-rel">
                            <h3 class="lighter block green">Enter the following information</h3>

                            <form class="form-horizontal" id="electralpositionform" method="post">


                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="name">Position Name:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="clearfix">
                                            @foreach (var position in Model)
                                            {
                                                <input type="text" id="PositionName" name="name" class="col-xs-12 col-sm-5" value="@position.Name" />
                                                <input type="hidden" id="PositionId" name="PositionId" class="col-xs-12 col-sm-5" value="@position.PositionId" />
                                            }

                                        </div>
                                    </div>
                                </div>

                                <div class="space-2"></div>


                            </form>
                        </div>
                    </div>

                    <hr />
                    <div class="wizard-actions center">
                        <button class="btn btn-success btn-next" id="UpdateElectralposition">
                            Save
                            <i class="ace-icon fa fa-floppy-o  icon-on-right"></i>
                        </button>
                    </div>
                </div><!-- /.widget-main -->
            </div><!-- /.widget-body -->
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
