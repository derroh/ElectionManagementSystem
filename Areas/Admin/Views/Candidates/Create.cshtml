@model ElectionManagementSystem.Areas.Admin.ViewModels.CandidateViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutView.cshtml";
}

<!-- PAGE CONTENT BEGINS -->

<div class="widget-box">
    <div class="widget-header widget-header-blue widget-header-flat">
        <h4 class="widget-title lighter">New Item Wizard</h4>
    </div>

    <div class="widget-body">
        <div class="widget-main">
            <div id="fuelux-wizard-container">

                <div class="step-content pos-rel">
                    <h3 class="lighter block green">Enter the following information</h3>
                    @using (Html.BeginForm("CreateCandidate", "Candidates", FormMethod.Post, new { @id = "electralcandidateform", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="ElectionId">Election</label>

                            <div class="col-xs-12 col-sm-9">

                                <div class="clearfix">

                                    @Html.DropDownListFor(m => m.ElectionId,
                                                        new SelectList(ViewBag.Elections, "ElectionId", "Name", ""),
                                                        "Select Election",
                                                        new { @class = "select2", @data_placeholder = "Click to Choose..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.ElectionId, "", new { @class = "text-danger  " })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="state">Student</label>

                            <div class="col-xs-12 col-sm-9">

                                <div class="clearfix">

                                    @Html.DropDownListFor(m => m.StudentId,
                                                        new SelectList(ViewBag.Students, "StudentId", "Name", ""),
                                                        "Select Student",
                                                        new { @class = "select2", @data_placeholder = "Click to Choose..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.StudentId, "", new { @class = "text-danger  " })
                            </div>
                        </div>


                        <div class="space-2"></div>

                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="state">Electral Position</label>

                            <div class="col-xs-12 col-sm-9">
                                
                                <div class="clearfix">

                                    @Html.DropDownListFor(m => m.PositionId,
                                                        new SelectList(ViewBag.Positions, "PositionId", "Name", ""),
                                                        "Select posiitions",
                                                        new { @class = "select2", @data_placeholder = "Click to Choose..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.PositionId, "", new { @class = "text-danger  " })
                            </div>
                        </div>

                        <div class="space-2"></div>
                    }

                </div>
            </div>

            <hr />
            <div class="wizard-actions center">
                <button class="btn btn-success btn-next" id="SaveElectralCandidate">
                    Save
                    <i class="ace-icon fa fa-floppy-o  icon-on-right"></i>
                </button>
            </div>
        </div><!-- /.widget-main -->
    </div><!-- /.widget-body -->
</div>
<!-- PAGE CONTENT ENDS -->
