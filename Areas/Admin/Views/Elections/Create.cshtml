@model ElectionManagementSystem.Areas.Admin.ViewModels.ElectionViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutView.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 class="widget-title lighter">New Election Wizard</h4>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <div id="fuelux-wizard-container">

                        <div class="step-content pos-rel">
                            <h3 class="lighter block green">Enter the following information</h3>
                            @using (Html.BeginForm("CreateElection", "Elections", FormMethod.Post, new { @id = "electionform", @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()

                                HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="name">Election Name:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="clearfix">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-12 col-sm-5" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="space-2"></div>

                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="phone">Start Date:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="input-group">

                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-clock-o bigger-110"></i>
                                            </span>

                                            @Html.TextBoxFor(m => m.StartDate, new { @class = "col-xs-12 col-sm-5" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- end date -->
                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="phone">End Date:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="input-group">

                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-clock-o bigger-110"></i>
                                            </span>

                                            @Html.TextBoxFor(m => m.EndDate, new { @class = "col-xs-12 col-sm-5" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="phone">Election Status:</label>

                                    <div class="col-xs-12 col-sm-9">

                                        <div class="clearfix">
                                            @Html.EnumDropDownListFor(
                                                x => x.ElectionStatus,
                                                "Choose status",
                                                new { @class = "select2", @data_placeholder = "Click to Choose..." })

                                        </div>
                                        @Html.ValidationMessageFor(m => m.ElectionStatus, "", new { @class = "text-danger  " })
                                    </div>
                                </div>

                            }
                        </div>
                    </div>

                    <hr />
                    <div class="wizard-actions center">
                        <button class="btn btn-success btn-next" id="SaveElection">
                            Save
                            <i class="ace-icon fa fa-floppy-o  icon-on-right"></i>
                        </button>
                    </div>
                </div><!-- /.widget-main -->
            </div><!-- /.widget-body -->
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
