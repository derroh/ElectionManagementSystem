
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutView.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="widget-box">
            <div class="widget-header widget-header-blue widget-header-flat">
                <h4 class="widget-title lighter">New Item Wizard</h4>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <div id="fuelux-wizard-container">

                        <div class="step-content pos-rel">
                            <h3 class="lighter block green">Enter the following information</h3>

                            <form class="form-horizontal" id="electionform" method="post">


                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="name">Position Name:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="clearfix">
                                            <input type="text" id="name" name="name" class="col-xs-12 col-sm-5" />
                                        </div>
                                    </div>
                                </div>

                                <div class="space-2"></div>

                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="phone">Start Date:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="input-group">

                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-clock-o bigger-110"></i>
                                            </span>

                                            <input type="text" id="StartDateTime" name="StartDateTime" class="col-xs-12 col-sm-5" />
                                        </div>
                                    </div>
                                </div>

                                <!-- end date -->
                                <div class="form-group">
                                    <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="phone">End Date:</label>

                                    <div class="col-xs-12 col-sm-9">
                                        <div class="input-group">

                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-clock-o bigger-110"></i>
                                            </span>

                                            <input type="text" id="EndDateTime" name="EndDateTime" class="col-xs-12 col-sm-5" />
                                        </div>
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>

                    <hr />
                    <div class="wizard-actions center">
                        <button class="btn btn-success btn-next" id="SaveElection">
                            Save
                            <i class="ace-icon fa fa-floppy-o  icon-on-right"></i>
                        </button>
                    </div>
                </div><!-- /.widget-main -->
            </div><!-- /.widget-body -->
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
